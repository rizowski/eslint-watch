{
  "name": "eslint-watch",
  "version": "4.0.0",
  "description": "Run eslint with watch mode",
  "main": "./src/cli.js",
  "scripts": {
    "build": "babel src -d build -s inline",
    "ci:win": "npm run lint && npm test",
    "ci:test": "npm run lint && npm run coverage",
    "clean": "rm -rf build node_modules",
    "coverage": "nyc npm test",
    "deploy": "./scripts/deploy.sh",
    "eslint": "node ./bin/esw --no-ignore --color",
    "lint:watch": "node ./bin/esw -w",
    "lint": "node ./bin/esw",
    "mocha": "mocha",
    "postcoverage": "nyc report --reporter=text-lcov | coveralls",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "test:integration": "npm run mocha -- --opts ./tests/mocha-integration.opts",
    "test:unit": "npm run mocha -- --opts ./tests/mocha-unit.opts",
    "test:watch": "npm run test -- -R min -b -w",
    "test": "npm run mocha -- --opts ./tests/mocha.opts"
  },
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rizowski/eslint-watch.git"
  },
  "bin": {
    "esw": "./bin/esw"
  },
  "files": [
    "bin",
    "build",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "eslint",
    "plugin",
    "command line tool",
    "watch",
    "javascript",
    "linter"
  ],
  "author": {
    "name": "Colten Rouska",
    "email": "c.rouska@gmail.com"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,css,json}": [
      "prettier --write --print-width=160",
      "git add"
    ],
    "*.md": [
      "prettier --write --print-width=80",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "singleQuote": true,
    "bracketSpacing": true
  },
  "bugs": {
    "url": "https://github.com/rizowski/eslint-watch/issues"
  },
  "homepage": "https://github.com/rizowski/eslint-watch",
  "peerDependencies": {
    "eslint": ">=4 <6.0.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.51",
    "bluebird": "^3.5.1",
    "chalk": "^2.1.0",
    "chokidar": "^2.0.0",
    "debug": "^3.0.1",
    "keypress": "^0.2.1",
    "lodash": "^4.17.4",
    "optionator": "^0.8.2",
    "source-map-support": "^0.5.3",
    "strip-ansi": "^4.0.0",
    "text-table": "^0.2.0",
    "unicons": "0.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/register": "^7.0.0-beta.51",
    "babel-eslint": "^8.2.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "chai": "^4.0.2",
    "coveralls": "^3.0.0",
    "eslint": "latest",
    "eslint-config-rizowski": "^1.1.4",
    "eslint-plugin-fp": "^2.3.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "mocha": "^5.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-sinon": "^2.0.0",
    "nyc": "^12.0.2",
    "prettier": "^1.12.1",
    "proxyquire": "^2.0.1",
    "sinon": "^6.0.1",
    "sinon-chai": "^3.2.0"
  }
}
