{
  "name": "eslint-watch",
  "version": "5.1.2",
  "description": "Run eslint with watch mode",
  "main": "./src/cli.js",
  "scripts": {
    "build": "babel src -d build -s inline",
    "ci:win": "npm run lint && npm test",
    "ci:test": "npm run lint && npm run coverage",
    "clean": "rm -rf build node_modules",
    "coverage": "nyc npm test",
    "deploy": "./scripts/deploy.sh",
    "lint:watch": "node ./bin/esw -w",
    "lint": "node ./bin/esw",
    "mocha": "mocha",
    "postcoverage": "nyc report --reporter=text-lcov | coveralls",
    "prepare": "npm run build",
    "test:integration": "npm run mocha -- --opts ./tests/mocha-integration.opts",
    "test:unit": "npm run mocha -- --opts ./tests/mocha-unit.opts",
    "test:watch": "npm run test -- -R min -b -w",
    "test": "npm run mocha -- --opts ./tests/mocha.opts"
  },
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rizowski/eslint-watch.git"
  },
  "bin": {
    "esw": "./bin/esw"
  },
  "files": [
    "bin",
    "build",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "eslint",
    "plugin",
    "command line tool",
    "watch",
    "javascript",
    "linter",
    "cli"
  ],
  "author": {
    "name": "Colten Rouska",
    "email": "c.rouska@gmail.com"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint -- --fix",
      "git add"
    ],
    "*.{js,css,json}": [
      "prettier --write --print-width=160",
      "git add"
    ],
    "*.md": [
      "prettier --write --print-width=80",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/rizowski/eslint-watch/issues"
  },
  "homepage": "https://github.com/rizowski/eslint-watch",
  "peerDependencies": {
    "eslint": ">=4 <7.0.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "chokidar": "^2.0.4",
    "core-js": "^2.6.5",
    "debug": "^4.1.0",
    "execa": "^1.0.0",
    "keypress": "^0.2.1",
    "lodash.debounce": "^4.0.8",
    "lodash.isempty": "^4.4.0",
    "lodash.isequal": "^4.5.0",
    "lodash.kebabcase": "^4.1.1",
    "lodash.unionwith": "^4.6.0",
    "optionator": "^0.8.2",
    "source-map-support": "^0.5.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-plugin-add-module-exports": "^1.0.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "latest",
    "eslint-config-rizowski": "^1.1.4",
    "eslint-plugin-fp": "^2.3.0",
    "husky": "1",
    "lint-staged": "^8.1.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-sinon": "^2.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.15.3",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.3.0"
  }
}
