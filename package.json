{
  "name": "eslint-watch",
  "version": "2.1.4",
  "description": "Run eslint with watch mode",
  "main": "./src/cli.js",
  "scripts": {
    "lint": "node ./bin/esw",
    "lw": "node ./bin/esw -w",
    "pretest": "npm run lint",
    "test": "node_modules/.bin/_mocha spec --recursive --timeout 5000 --compilers js:babel-core/register",
    "tdd": "mocha -w spec --recursive -R spec",
    "ci": "npm run coverage",
    "coverage": "istanbul cover npm test",
    "build": "babel src -d build -s inline"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rizowski/eslint-watch.git"
  },
  "bin": {
    "esw": "./bin/esw"
  },
  "keywords": [
    "eslint",
    "plugin",
    "cli",
    "command line tool",
    "watch",
    "javascript",
    "linter"
  ],
  "author": {
    "name": "Colten Rouska",
    "email": "c.rouska@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rizowski/eslint-watch/issues"
  },
  "homepage": "https://github.com/rizowski/eslint-watch",
  "peerDependencies": {
    "eslint": ">=0.19.0 <2.0.0"
  },
  "dependencies": {
    "chalk": "^1.0.0",
    "chokidar": "^1.4.1",
    "debug": "^2.2.0",
    "keypress": "^0.2.1",
    "lodash": "^3.10.1",
    "optionator": "^0.7.1",
    "source-map-support": "^0.4.0",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "babel": "^6.3.13",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.17",
    "babel-preset-es2015": "^6.3.13",
    "babel-runtime": "^6.3.13",
    "chai": "^3.4.0",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "mocha-sinon": "^1.1.4",
    "proxyquire": "^1.6.0",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0"
  }
}
